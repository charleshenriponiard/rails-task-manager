
<h1>TASK</h1>

<% @tasks.each do |task| %>

<%= link_to task.title, task_path(task) %>

<p><%= task.completed ? "✅" : '❌'%></p>
<%= link_to "☠", task_path(task), method: :delete, data: { confirm: "are you sure?"}  %>
<hr>


<% end %>

<%= link_to "add a new task", new_task_path %>



